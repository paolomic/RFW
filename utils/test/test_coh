def run_session_simple_2():         # ===== Test Invoke Keyword =====
    env = hang_app(mode='hang_or_lunch')
    page = uw.get_child(env[K_TOP], name='Orders', ctrl_type='Pane', usere=0, deep=3)
    grid = uw.get_child(page, automation_id='59648', usere=1, deep=5)
    print(f'page {page}, grid{grid}')

    # Call Page Keyword
    response = uw.robot_send(grid.handle, uw.ROBOT_CMD_GET_HEADER, input_str="")    # input_str = 'arg1|arg2|...'
    ##print(f'ROBOT_CMD_GET_HEADER result: [{response}]') 
    jsgrid = ug.create_grid(response) 
    uw.grid_select_rows(grid, 6, mode="page")
    rows = uw.win_copy_to_clip(wait_init=1)
    res = ug.add_grid_rows(jsgrid, rows)
    # Use Data
    print (f'Collected Orders: {jsgrid.get_row_count()}')
    order = jsgrid.search_first_match({"Order ID": "C10022501030000022054"})      # piu segmenti con , 
    print(f'Trovata row {order}')
    print (f'Il Prezzo dell Ordine e` {order['Price']}, Minder State: {order['Minder State']}'   )

